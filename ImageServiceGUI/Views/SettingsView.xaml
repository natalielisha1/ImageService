<Page x:Class="ImageServiceGUI.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImageServiceGUI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <StackPanel Margin="6" Orientation="Vertical">
        <TextBlock Text="Settings" FontSize="60" HorizontalAlignment="Center" Width="240" Foreground="#FF800404" FontWeight="Bold" TextDecorations="{x:Null}" FontFamily="AR DELANEY" Margin="285,0,263,0"/>
        <TextBlock  Text="Output Directory:" FontSize="22" FontWeight="Bold" TextDecorations="{x:Null}" Margin="10,0,0,4" HorizontalAlignment="Left"/>
        <TextBlock  Text="Source Name:" FontSize="22" FontWeight="Bold" TextDecorations="{x:Null}" Margin="10,0,0,4" HorizontalAlignment="Left"/>
        <TextBlock  Text="Log Name:" FontSize="22" FontWeight="Bold" TextDecorations="{x:Null}" Margin="10,0,0,4" HorizontalAlignment="Left"/>
        <TextBlock  Text="Thumbnail Size:" FontSize="22" FontWeight="Bold" TextDecorations="{x:Null}" Margin="10,0,0,4" HorizontalAlignment="Left"/>
        <Button x:Name="RmvButton" Height="30" FontSize="19" FontWeight="Bold">Remove</Button>
    </StackPanel>
</Page>
