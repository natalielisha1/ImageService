@model IEnumerable<ImageServiceWEB.Models.Instances.Photo>

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content")

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">ImageWeb</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("ImageWeb", "Index", "ImageWeb", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Config", "Index", "Config", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Photos", "Index", "Photos", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Logs", "Index", "Logs", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        @RenderBody()
        <div class="row">

            <div>
				<style>
				h6 {color:#00004d }
				</style>
                <div class="row" style="margin-top:50px">
				@foreach (var photo in Model)
				{
					<div class="col-sm-2">
						<div class="card" style="margin-bottom:20px">
							<img class="card-img-top rounded-circle" src=@photo.ThumbnailPath alt="">
							<div class="card-body">
								<h6 class="card-title">
									<b>
									<a href="#">@photo.Name</a>
									</b>
								</h6>
								<h6>
									<b>
									Year: @photo.Year
									</b>
								</h6>
								<h6>
									<b>
									Month: @photo.Month
									</b>
								</h6>
							</div>
							<div>
								<button type="button">
									@Html.ActionLink("View", "Index", "ViewPhoto", new {
										ThumbnailPath = @photo.ThumbnailPath,
										Path = @photo.Path,
										Name = @photo.Name,
										Year = @photo.Year,
										Month = @photo.Month
									}, null)
								</button>
								<button type="button">
									@Html.ActionLink("Delete", "Index", "DeletePhoto", new {
										ThumbnailPath = @photo.ThumbnailPath,
										Path = @photo.Path,
										Name = @photo.Name,
										Year = @photo.Year,
										Month = @photo.Month
									}, null)
								</button>
							</div>
						</div>
					</div>
					}
                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-12 -->

        </div>
        <!-- /.row -->
    </div>
	<!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; N&O 2018</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>