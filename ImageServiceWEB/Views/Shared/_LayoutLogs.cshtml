@model IEnumerable<ImageServiceWEB.Models.Instances.Log>

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content")

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">ImageWeb</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("ImageWeb", "Index", "ImageWeb", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Config", "Index", "Config", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Photos", "Index", "Photos", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Logs", "Index", "Logs", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container" style="margin-top:70px">
        @RenderBody()
		<div class="container" style="margin-top:20px">
			<input type="text" id="input_box"/>
		</div>
		<div class="container" style="margin-top:20px">
			<table class="table" id="logs_table">
				<tr>
					<th>
						Type
					</th>
					<th>
						Message
					</th>
					<th></th>
				</tr>

			@foreach (var log in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => log.Type)
					</td>
					<td>
						@Html.DisplayFor(modelItem => log.Message)
					</td>
				</tr>
			}
			</table>
		</div>
    </div>
	<!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; N&O 2018</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

	<script type="text/javascript">
        $('#input_box').on('change keydown paste input', function () {
            $('#logs_table').empty()
            var table_body = "<tr> \
                                  <th> \
                                      Type \
					              </th> \
                                  <th> \
                                      Message \
					              </th> \
                                  <th></th> \
				              </tr>";
            var log_type = '';
            var log_message = '';
            @foreach (var log in Model)
            {
                <text>
                log_type = '@log.Type';
                log_message = '@Html.DisplayFor(modelItem => log.Message)';
                if (log_type.includes($('#input_box').val())) {
                    table_body += "<tr>";
                    table_body += "<td>";
                    table_body += "@log.Type";
                    table_body += "</td>";
                    table_body += "<td>";
                    table_body += "@log.DoubleSlashedMessage";
                    table_body += "</td>";
                    table_body += "</tr>";
                }
                </text>
            }
            $('#logs_table').html(table_body)
        })
    </script>

</body>
</html>